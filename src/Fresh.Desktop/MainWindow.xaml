<Window x:Class="Fresh.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fresh.Desktop"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Title="MainWindow" Height="450" Width="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/Снимок экрана_20221129_003757.png"
               Grid.Column="1"
               Panel.ZIndex="1"
               MouseUp="Image_MouseUp"
               Style="{StaticResource imgClose}" Height="15" />




        <Border Grid.Column="0" CornerRadius="5 0 0 5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA9AD" Offset="0"/>
                    <GradientStop Color="#3AADA1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="0,-4,0,0">
                <Canvas>
                    <Polygon Points="0,20 230,140 0,270" Fill="#4EB1B6"/>
                    <Polygon Points="90,400 200,360 180,448" Fill="#4EB1B6" HorizontalAlignment="Left" Height="447" Canvas.Top="2" VerticalAlignment="Center" Width="220"/>
                    <Ellipse
                             Width="40" Height="20" Fill="#4EB1B6" RenderTransformOrigin="0.11,-2.04" Canvas.Left="226" Canvas.Top="415" />
                    <Ellipse Margin="30 350 0 0"
                             Width="40" Height="20" Fill="#4EB1B6" />
                </Canvas>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Welcome to" Style="{StaticResource titleText}" Height="61"/>
                    <TextBlock Text="Fresh Market" Style="{StaticResource normalText}" 
                               Opacity="0.8" Height="57"/>
                </StackPanel>
                <Button x:Name="EmailButton" Visibility="Hidden" Content="Email" Style="{StaticResource button}" Margin="0,314,0,0" RenderTransformOrigin="0.681,-0.775" HorizontalAlignment="Center" VerticalAlignment="Top" Width="152" Click="Button_Click_1" Height="45"  >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Label
                    Content="Forgot Password ?" 
                    Foreground="#E8C8F6"
                    FontSize="14"
                    Visibility="Hidden" x:Name="Errorlists" 
                    Width="143" Margin="78,353,59,71"/>
            </Grid>
        </Border>
        <Border Background="#ffffff" Grid.Column="1" 
                CornerRadius="0 15 15 0" MouseDown="Border_MouseDown">
            <!--Uzgarish-->
            <StackPanel VerticalAlignment="Center" 
                        Visibility="Visible" x:Name="Border1">

                <TextBlock Text="Sing in to App "
                           Margin="0 0 0 100"
                           Style="{StaticResource titleText}"
                           Foreground="#3AB198" Height="50" />


                <Border BorderThickness="1"
                        BorderBrush="#acb0af"
                        CornerRadius="8"
                        Margin="55 10" >

                    <Grid Margin="7 9">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/32e1523d02c38fd6ed1e705005d816765e02077bc73c2d767080cbc0097a7339.jpg" Height="30" />

                        <TextBlock x:Name="textEmail" Text="Email" MouseDown="textEmail_MouseDown" Style="{StaticResource textHint}"  />
                        <TextBox x:Name="txtEmail"  TextChanged="txtEmail_TextChanged" Style="{StaticResource TextBox}" />
                    </Grid>
                </Border>

                <Border BorderThickness="1"
                        BorderBrush="#acb0af"
                        CornerRadius="8"
                        Margin="55 5 " 
                        x:Name="PasswordBorder"
                        Visibility="Visible">

                    <Grid Margin="7 9">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/ImagePassword.png" Height="30" />

                        <TextBlock x:Name="textPassword" Text="Password" MouseDown="textPassword_MouseDown" Style="{StaticResource textHint}"/>
                        <PasswordBox x:Name="txtPassword" PasswordChanged="txtPassword_TextChanged" Style="{StaticResource TextBox}" />
                    </Grid>
                </Border>
                <Label
                    Content="Error! Email or Password" 
                    Foreground="Red"
                    Visibility="Hidden" x:Name="Errorlist" Width="143" Height="25"/>
                <Button Content="Sign in"
                        Click="Button_Click" 
                        Style="{StaticResource mainbutton}"
                        Visibility="Visible" Height="53"/>
            </StackPanel>
        </Border >
        <!--2 Oyna SmS junatish-->

        <Border Grid.Column="1" 
                RenderTransformOrigin="0.602,0.578" 
                Visibility="Hidden" x:Name="EmailSMS">
            <Button Content="Email"
                        Click="Button_email" 
                        Style="{StaticResource mainbutton}"
                        Visibility="Visible" Margin="125,323,95,79" />
        </Border>
        <Label Grid.Column="1"
               Content="Enter Confirmation code:" 
               Margin="63,56,199,371" FontWeight="Bold" 
               Visibility="Hidden" x:Name="LableCreate"/>
        <Label Grid.Column="1"
               Content="Error ! No More Than 6-dijits" 
               Margin="132,120,104,303"
               x:Name="error"
               Visibility="Hidden" Foreground="Red"/>

        <Label Grid.Column="1"
               Content="Create New Password:" 
               Margin="63,160,199,267" FontWeight="Bold" 
               Visibility="Hidden"
               x:Name="CreateNew"/>

        <Label Grid.Column="1"
               Content="Reenter new Password:" 
               Margin="63,229,199,198" FontWeight="Bold" 
               Visibility="Hidden"
               x:Name="CreateNew2"/>

        <Border BorderThickness="1"
                        BorderBrush="#acb0af"
                        CornerRadius="8"
                        Margin="70,84,65,326"
                        Grid.Column="1" Visibility="Hidden" x:Name="Cack_Password">

            <Grid Margin="7 9">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Images/32e1523d02c38fd6ed1e705005d816765e02077bc73c2d767080cbc0097a7339.jpg" Height="30" Margin="-4,-5,4,-5" />

                <TextBlock x:Name="textChack" Text="Create:" MouseDown="textChack_MouseDown" Style="{StaticResource textHint}"  />
                <TextBox x:Name="txtChack"  TextChanged="txtChack_TextChanged" Style="{StaticResource TextBox}" />
            </Grid>
        </Border>

        <Border BorderThickness="1"
                        BorderBrush="#acb0af"
                        CornerRadius="8"
                        Margin="70,187,60,221" 
                        x:Name="UpdatePass"
                        Visibility="Hidden"
                        Grid.Column="1">

            <Grid Margin="7 7">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Images/ImagePassword.png" Height="30" />

                <TextBlock x:Name="textUpdate" Text="Password" MouseDown="textUpdate_MouseDown" Style="{StaticResource textHint}"/>
                <PasswordBox x:Name="txtUpdate" PasswordChanged="txtUpdate_TextChanged" Style="{StaticResource TextBox}" />
            </Grid>
        </Border>

        <Border BorderThickness="1"
                        BorderBrush="#acb0af"
                        CornerRadius="8"
                        Margin="70,256,60,152" 
                        x:Name="UpdatePass2"
                        Visibility="Hidden"
                        Grid.Column="1">

            <Grid Margin="7 7">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Images/ImagePassword.png" Height="30" />

                <TextBlock x:Name="textUpdate2" Text="Password" MouseDown="textUpdate2_MouseDown" Style="{StaticResource textHint}"/>
                <PasswordBox x:Name="txtUpdate2" PasswordChanged="txtUpdate_TextChanged2" Style="{StaticResource TextBox}" />
            </Grid>
        </Border>


    </Grid>
</Window>
